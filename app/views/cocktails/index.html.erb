  <div class="center">
    <p id="notice"><%= notice %></p>
    <table class="table white">
      <thead>
        <tr>
          <th colspan="2">Our fancy cocktails</th>
        </tr>
      </thead>
      <tbody>
        <% @cocktails.each do |cocktail| %>
          <tr>
            <td><%= cocktail.name %></td>
            <td><%= image_tag cocktail.picture.url(:thumb) %></td>
             <td>
             <div class="btn-group">
              <%= link_to 'Show', cocktail, class: "btn btn-danger" %>
              <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Edit', edit_cocktail_path(cocktail) %></li>
                <li class="divider"></li>
                <li><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>
